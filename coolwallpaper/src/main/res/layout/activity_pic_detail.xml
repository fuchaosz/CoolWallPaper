<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <!--显示图片-->
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="matrix"
        android:visibility="gone"
        />

    <!--改为左右滑动的界面-->
    <HorizontalScrollView
        android:id="@+id/hs_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </HorizontalScrollView>


    <!--进度条-->
    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress_rotate_circle"
        />

    <!--浮动半透明菜单-->
    <include
        layout="@layout/activity_pic_detail_menu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />

    <!--左边的弹出fragment-->
    <FrameLayout
        android:id="@+id/fl_left_container"
        android:layout_width="@dimen/picdetail_fragment_left_width"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
    </FrameLayout>

</FrameLayout>